s = -20
x = 2
while x < 5:
    y = 2
    while y < 5:
        s = s + x + y
        y = y + 1
    x = x + 1
print(s)

-----------------------------------------------------------------------------  

s = 5
x = 5
while x > 3:
    for y in range(2,4):
        s = s + 1
    x = x - 1
print(s)

